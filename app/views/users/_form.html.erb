
<div class="card">
  <div class="card-body">  
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                       <%= form_with(model: @user, local: true) do |form| %>
                            <div class="form-group">
                                <%= form.label :name, "Nome Completo" %>
                                <%= form.text_field :name, 
                                         class:"form-control", 
                                        disabled: true  %>
                            </div>
                            <div class="form-group">
                                <%= form.label :username, "Nome de Usuário" %>
                                <%= form.text_field :username, 
                                         class:"form-control", 
                                        disabled: true  %>
                            </div>
                            <div class="form-group">
                                <%= form.label :email, "Email" %>
                                <%= form.email_field :email, 
                                         class:"form-control"  %>
                                        
                            </div>
                            <div class="form-group">
                                <%= form.label :registration, "Matrícula" %>
                                <%= form.text_field :registration, 
                                         class:"form-control"  %>
                            </div>
                            <div class="form-group">
                                <%= form.label :password, "Senha" %>
                                <%= form.password_field :password, 
                                         class:"form-control" %>
                                          
                            </div>
                            <div class="form-group">
                                <%= form.label :password_confirmation, "Confirmar Senha" %>
                                <%= form.password_field :password_confirmation, 
                                         class:"form-control" %>
                            </div>

                            <% if current_user.user_admin? %>
                              <div div class="form-group">
                                <%= form.label :team_id, "Equipe ou setor: " %>
                                <%= form.collection_select :team_id, Team.all, :id, :name, class:"form-control" %>
                              </div>
                              
                              <div div class="form-group">
                                <%= form.label :role_id, "Função: " %>
                                <%= form.collection_select :role_id, Role.all, :id, :name, class:"form-control" %>
                              </div>

                            <% end %>
                            
                              <%= form.submit "Enviar", class: "btn btn-default" %>
                              <%= link_to 'Cancelar', :back, class: "btn btn-default"%>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>