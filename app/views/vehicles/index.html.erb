<p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">VTR</th>
        <th scope="col">Ativa</th>
        <th scope="col">Placa</th>
        <th scope="col">Marca</th>
        <th scope="col">Modelo</th>
      </tr>
    </thead>
    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.vtr_number %></td>
          <td><%= vehicle.active %></td>
          <td><%= vehicle.licence_plate %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.brand %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


<div class="actions">
  <%= link_to 'Nova Viatura', new_vehicle_path, class: 'btn btn-primary' %>
</div>





