<h1>Finalização do deslocamento</h1>

 
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Houve avaria no veiculo ?
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @car.items.each do |item| %>
          <%= render 'items/item', item: item %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



  <%= form_for @car do |f| %>
      <div class= 'input-group mb-4'>
        <%= f.text_field :mileage, class: 'form-control' %>
        <div class="input-group-append">
          <%= f.submit "Quilometragem final",  class: "btn btn-primary input-group-btn" %>
        </div>
      </div>
  <% end %>


