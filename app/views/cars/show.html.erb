<%= provide(:title, @car.vtr) %>

<div class="card-header d-flex justify-content-center">
  <div>
      <h5 class='m-0'><b> VTR -<%= @car.vtr %></b></h5>
      <p class='text-secondary m-0'><small><%= @car.model %> [<%= @car.licence_plate %>] </small></p>
      <div>
        <p> Inicial <%= @car.mileage %></p>
      </div>
  </div>
</div>


<div class='card-body'> 
  <ul class="list-group">
    <% @car.items.each do |item| %>
      <%= render 'items/item', item: item %>
    <% end %>
  </ul>
</div>

<%= form_for @car do |f| %>
    <div class= 'input-group mb-4'>
      <%= f.text_field :mileage, class: 'form-control' %>
      <div class="input-group-append">
        <%= f.submit "OK",  class: "btn btn-primary input-group-btn" %>
      </div>
    </div>
  <% end %>
