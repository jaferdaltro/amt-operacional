<%= provide(:title, @car.vtr) %>

<div class="card-header d-flex justify-content-center">
  <div>
      <h5 class='m-0'><b> VTR -<%= @car.vtr %></b></h5>
      <p class='text-secondary m-0'><small><%= @car.model %> [<%= @car.licence_plate %>] </small></p>
      <div>
        <p> Inicial <%= @car.mileage %></p>
      </div>
  </div>
</div>


<div class='card-body'> 
  <ul class="list-group">
    <% @car.items.each do |item| %>
      <%= render 'items/item', item: item %>
    <% end %>
  </ul>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Iserir quilometragem
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       
      <%= form_for @car do |f| %>
        <div class= 'input-group mb-4'>
          <%= f.text_field :mileage, class: 'form-control' %>
          <div class="input-group-append">
            <%= f.submit "Quilometragem",  class: "btn btn-primary input-group-btn" %>
          </div>
        </div>
      <% end %>
       
      </div>
     
    </div>
  </div>
</div>




